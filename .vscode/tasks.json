{
	"version": "2.0.0",
	"tasks": [
		{
			"label": "Run DRAM Simulator (Debug)",
			"type": "shell",
			"command": "${workspaceFolder}/.venv/Scripts/python.exe",
			"args": [
				"dram_sim.py",
				"--rows", "32768",
				"--trc", "45ns",
				"--threshold", "16000",
				"--rfmabo", "64",
				"--trfcrfm", "350ns",
				"--rfmfreqmin", "32us",
				"--rfmfreqmax", "48us",
				"--runtime", "64ms"
			],
			"group": {
				"kind": "build",
				"isDefault": true
			},
			"presentation": {
				"echo": true,
				"reveal": "always",
				"focus": false,
				"panel": "shared"
			},
			"problemMatcher": []
		},
		{
			"label": "Run DRAM Simulator (CSV)",
			"type": "shell",
			"command": "${workspaceFolder}/.venv/Scripts/python.exe",
			"args": [
				"dram_sim.py",
				"--rows", "8",
				"--trc", "45ns", 
				"--threshold", "1000",
				"--rfmabo", "2",
				"--trfcrfm", "200ns",
				"--rfmfreqmin", "24us",
				"--rfmfreqmax", "36us",
				"--runtime", "10ms",
				"--csv"
			],
			"group": "build",
			"presentation": {
				"echo": true,
				"reveal": "always",
				"focus": false,
				"panel": "shared"
			},
			"problemMatcher": []
		},
		{
			"label": "Install Dependencies",
			"type": "shell",
			"command": "${workspaceFolder}/.venv/Scripts/python.exe",
			"args": ["-m", "pip", "install", "-r", "requirements.txt"],
			"group": "build",
			"presentation": {
				"echo": true,
				"reveal": "always",
				"focus": false,
				"panel": "shared"
			},
			"problemMatcher": []
		}
	]
}